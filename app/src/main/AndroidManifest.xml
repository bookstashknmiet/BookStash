            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blogspot.zone4apk.bookstash.LoginActivity" />
        </activity>
        <activity
            android:name="com.blogspot.zone4apk.bookstash.NotificationsActivity"
            android:label="Notification"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blogspot.zone4apk.bookstash.DashboardActivity" />

        </activity>
        <activity
            android:name="com.blogspot.zone4apk.bookstash.ProductSubscriptionActivity"
            android:label="Subscription"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blogspot.zone4apk.bookstash.DashboardActivity" />
        </activity>
    </application>

</manifest>